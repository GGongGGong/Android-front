<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_icon"
        android:background="@android:color/transparent"
        android:layout_margin="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/find_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/blue1"
        android:layout_marginTop="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입한 아이디"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/gray2"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/id_input_box" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_input_box"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="96dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/find_password_title"
        android:background="@drawable/gray_background_2">

        <EditText
            android:id="@+id/id_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="아이디 입력"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/gray2"
            android:inputType="textLongMessage"
            android:background="@android:color/transparent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/email_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입한 E-mail"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/gray2"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/email_input_box" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/email_input_box"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_input_box"
        android:background="@drawable/gray_background_2">

        <EditText
            android:id="@+id/email_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="아이디 입력"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/gray2"
            android:inputType="textLongMessage"
            android:background="@android:color/transparent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/find_password_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/find_id_btn_background"
        android:layout_marginTop="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_input_box"/>
</androidx.constraintlayout.widget.ConstraintLayout>