<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_background">

    <TextView
        android:id="@+id/access_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이용에 대한 액세스 권한이 없어요."
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_margin="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/acess_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앱 설정에서 액세스 권한을 수정할 수 있어요.\n이동하시겠어요?"
        android:textSize="12dp"
        android:textColor="@color/gray2"
        android:gravity="center"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/access_title"/>

    <Button
        android:id="@+id/access_setting_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="설정하기"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:background="@drawable/dialog_btn_background_1"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/acess_content"/>

    <Button
        android:id="@+id/access_cancel_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="취소하기"
        android:textColor="@color/gray2"
        android:textSize="16dp"
        android:textStyle="bold"
        android:background="@drawable/dialog_btn_background_2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/access_setting_btn"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>